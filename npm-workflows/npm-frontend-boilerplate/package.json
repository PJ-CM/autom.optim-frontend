{
  "name": "npm-frontend-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate de Automatización y Optimización de Tareas Front end con Scripts NPM",
  "main": "package.json",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "global:package": "npm i -g node-sass babel-cli babel-preset-latest pug pug-cli browser-sync parallelshell rimraf mkdirp uncss postcss-cli autoprefixer buildify useref useref-cli html-minifier copy imagemin imagemin-cli imagemin-pngquant imagemin-jpeg-recompress imagemin-webp imagemin-svgo imagemin-gifsicle",
    "dev:package": "npm i -D node-sass babel-cli babel-preset-latest pug pug-cli browser-sync parallelshell rimraf mkdirp uncss postcss-cli autoprefixer buildify useref useref-cli html-minifier copy imagemin imagemin-cli imagemin-pngquant imagemin-jpeg-recompress imagemin-webp imagemin-svgo imagemin-gifsicle",
    "sass": "node-sass -w -o ./src/css ./src/scss",
    "babel": "babel -w ./src/es6 -d ./src/js",
    "pug": "pug -w -P -p ./src/pug/partials -O ./src/pug/options.json ./src/pug/templates -o ./src",
    "watch:metalang": "parallelshell \"npm run sass\" \"npm run pug\" \"npm run babel\"",
    "dev:server_00": "browser-sync start --server --directory --startPath ./src --serveStatic ./src --files ./src --reload-delay=300 --reload-debounce=500",
    "dev:serverproxy_00": "browser-sync start --proxy \"zackis.tuto.autom.optim-frontend-escuelait.net:8080\" --files \"./src\"",
    "dev:server": "browser-sync start --config bs-config-dev.server.js --directory",
    "dev:serverproxy": "browser-sync start --config bs-config-dev.proxy.js",
    "watch:devserver": "parallelshell \"npm run dev:server\" \"npm run watch:metalang\"",
    "watch:devserverproxy": "parallelshell \"npm run dev:serverproxy\" \"npm run watch:metalang\"",
    "clean": "rimraf ./dist/* !./dist/.gitignore",
    "build:folders": "mkdirp ./dist/css ./dist/js ./dist/img",
    "dist:clean:build": "npm run clean && npm run build:folders",
    "uncssURL": "uncss http://bextlan.com, http://bextlan.com/acerca > ./dist/css/estilos-uncss.url-tratados.css",
    "uncssFiles": "uncss \"./src/**/*.+(html|php)\" > ./dist/css/local_styles.css",
    "uncss": "uncss -u uncss.json \"./src/*.+(html|php)\" > ./dist/css/style.css",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers \"> 5%, ie 10\" -r ./dist/css/style.css",
    "min:css-js": "node buildify",
    "useref": "useref \"./src/**/*.+(html|php)\" ./dist",
    "htmlmin": "html-minifier --html5 --remove-comments --collapse-whitespace --input-dir ./dist/*.+(html|php) --output-dir ./dist/",
    "statics": "node statics",
    "imagemin-sin": "imagemin \"./src/img/*.+(jpg|png)\" -o ./dist/img/",
    "imagemin": "imagemin \"./src/img/*.+(jpg|png)\" -o ./dist/img/ -p=pngquant -p=jpeg-recompress",
    "webp": "imagemin \"./dist/img/*.jpg\" -o ./dist/img/ -p=webp",
    "svgmin": "imagemin \"./src/img/*.svg\" -o ./dist/img/ -p=svgo",
    "gifmin": "imagemin \"./src/img/*.gif\" -o ./dist/img/ -p=gifsicle",
    "jpgresize": "magick ./dist/img/*.jpg -resize \"1024 >\" ./dist/img/*.jpg",
    "pngresize": "magick -resize \"1024 >\" ./dist/img/*.png",
    "imageminresized": "imagemin \"./dist/img/*.+(jpg|png)\" -o ./dist/img/ -p=pngquant -p=jpeg-recompress",
    "build:frontend": "npm run uncss && npm run autoprefixer && npm run min:css-js  && npm run useref && npm run htmlmin",
    "build:media": "npm run statics && npm run imagemin && npm run webp && npm run svgmin && npm run gifmin",
    "build:dist": "npm run clean && npm run build:folders && npm run build:frontend && npm run build:media",
    "serve_00": "browser-sync start --server --directory --startPath dist --serveStatic dist --files dist --reload-delay=300 --reload-debounce=500",
    "proxy_00": "browser-sync start --proxy localhost --directory --startPath /TallerFrontend2017/codigos/npm-workflows/npm-frontend-boilerplate --serveStatic / --files dist --reload-delay=300 --reload-debounce=500",
    "server": "browser-sync start --config bs-config-server.js --directory",
    "serverproxy": "browser-sync start --config bs-config-proxy.js"
  },
  "author": "YoSoY",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.0",
    "babel-preset-latest": "^6.24.0",
    "browser-sync": "^2.18.8",
    "buildify": "^0.4.0",
    "copy": "^0.3.0",
    "html-minifier": "^3.4.2",
    "imagemin": "^5.2.2",
    "imagemin-cli": "^3.0.0",
    "imagemin-gifsicle": "^5.1.0",
    "imagemin-jpeg-recompress": "^5.1.0",
    "imagemin-pngquant": "^5.0.0",
    "imagemin-svgo": "^5.2.0",
    "imagemin-webp": "^4.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^3.0.0",
    "pug": "^2.0.0-beta11",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "uncss": "^0.14.1",
    "useref": "^1.2.0",
    "useref-cli": "^1.0.0"
  }
}